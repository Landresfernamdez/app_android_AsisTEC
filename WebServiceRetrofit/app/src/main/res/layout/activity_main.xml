<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/continuar"
        android:id="@+id/continuar"
        android:onClick="validarLogin"
        android:nestedScrollingEnabled="false"
        android:background="@drawable/btn_circle"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtId"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logito"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/imageview2"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/txtId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtId"
        android:width="200dp"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:layout_above="@+id/txtNombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContraseÃ±a"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/txtNombre"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txtNombre" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="20"
        android:id="@+id/txtNombre"
        android:layout_below="@+id/txtId"
        android:layout_alignEnd="@+id/txtId"
        android:layout_alignParentEnd="true"
        android:password="true"
        android:textSize="30dp" />

</RelativeLayout>
